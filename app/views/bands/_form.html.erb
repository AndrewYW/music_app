<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= auth_token %>
  <img src="https://media.giphy.com/media/qnp7r8H741PO/giphy.gif">
  <br>
  <label for="band_name">Name</label>
  <input
    type="text"
    name="band[name]"
    id="band_name"
    value="<%= band.name %>">
  <br>

  <br>
  <% submit_text = (band.persisted? ? 'UPDATE' : 'CREATE') + ' THIS BAND!!!!' %>
  <input type="submit" value="<%= submit_text %>">
</form>